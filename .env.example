# Discord Bot Token (Required)
# Get this from https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here

# Guild ID (Required)
# The main server ID where the bot will be primarily used
GUILD_ID=your_guild_id_here

# Database Configuration (Optional)
# SQLite database file path
DATABASE_PATH=bot_database.db

# Bot Configuration (Optional)
# Default command prefix
BOT_PREFIX=!

# Logging Configuration (Optional)
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_FILE=bot.log

# Feature Flags (Optional)
BETA_FEATURES=false
EXPERIMENTAL_COMMANDS=false
PREMIUM_FEATURES=false

# External API Keys (Optional)
# Weather API for weather commands
WEATHER_API_KEY=your_weather_api_key

# News API for news commands  
NEWS_API_KEY=your_news_api_key

# Translation API for translate commands
TRANSLATE_API_KEY=your_translate_api_key

# Image API for image generation/manipulation
IMAGE_API_KEY=your_image_api_key

# YouTube API for enhanced music features
YOUTUBE_API_KEY=your_youtube_api_key

# Spotify API for music integration
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# Economy Settings (Optional)
DAILY_REWARD_BASE=100
WORK_COOLDOWN=3600
CRIME_COOLDOWN=7200
ROB_COOLDOWN=14400

# Moderation Settings (Optional)
AUTO_MOD_ENABLED=false
SPAM_DETECTION=true
LINK_FILTER=false
WORD_FILTER=false

# Music Settings (Optional)
MAX_QUEUE_SIZE=100
DEFAULT_VOLUME=50
AUTO_DISCONNECT_TIMEOUT=300

# Ticket Settings (Optional)
MAX_TICKETS_PER_USER=1
AUTO_CLOSE_INACTIVE_DAYS=7

# Security Settings (Optional)
RATE_LIMIT_ENABLED=true
COMMANDS_PER_MINUTE=30
AUTO_BAN_SPAM_BOTS=true

# Backup Settings (Optional)
AUTO_BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
RETAIN_BACKUPS_DAYS=30

# Advanced Settings (Optional)
DEBUG_MODE=false
MAINTENANCE_MODE=false
ANALYTICS_ENABLED=true
ERROR_REPORTING=true

# Performance Settings (Optional)
CACHE_SIZE=1000
CONNECTION_POOL_SIZE=10
COMMAND_TIMEOUT=30

# Integration Settings (Optional)
WEBHOOK_URL=your_webhook_url_for_logs
MONITORING_URL=your_monitoring_service_url

# Development Settings (Optional)
DEV_GUILD_ID=your_development_server_id
TEST_MODE=false
MOCK_APIS=false
