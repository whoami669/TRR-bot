<!-- CTA Section -->
<section class="bg-primary text-white py-5">
    <div class="container text-center">
        <h2 class="display-5 fw-bold mb-3">Ready to Transform Your Server?</h2>
        <p class="lead mb-4">Join thousands of communities using UltraBot to create engaging Discord experiences</p>
        <div class="d-flex justify-content-center gap-3">
            <a href="/invite" class="btn btn-light btn-lg" target="_blank">
                <i class="fab fa-discord me-2"></i>Add to Discord
            </a>
            <a href="/features" class="btn btn-outline-light btn-lg">
                <i class="fas fa-list me-2"></i>View All Features
            </a>
        </div>
    </div>
</section>

<script>
// Load and display real statistics
document.addEventListener('DOMContentLoaded', function() {
    fetch('/api/stats')
        .then(response => response.json())
        .then(data => {
            if (data.guild_count !== undefined) {
                document.getElementById('serverCount').textContent = data.guild_count.toLocaleString();
            }
            if (data.user_count !== undefined) {
                document.getElementById('userCount').textContent = data.user_count.toLocaleString();
            }
        })
        .catch(error => {
            console.log('Stats not available yet');
        });
});
</script>